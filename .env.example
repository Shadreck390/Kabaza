# ============================================
# KABAZA APP CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill in your keys
# ============================================

# ======================
# FACEBOOK CONFIGURATION
# ======================
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_TOKEN=your_facebook_client_token_here
FACEBOOK_APP_NAME=Kabaza
FACEBOOK_DISPLAY_NAME=Kabaza

# ======================
# FIREBASE CONFIGURATION
# ======================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# ======================
# GOOGLE MAPS
# ======================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ======================
# API CONFIGURATION
# ======================
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# ======================
# ENVIRONMENT
# ======================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# ======================
# FEATURE FLAGS
# ======================
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
FACEBOOK_AUTO_LOG_EVENTS=true
FACEBOOK_AD_ID_COLLECTION=true

# ======================
# APP INFO
# ======================
APP_NAME=Kabaza
APP_VERSION=1.0.0
BUILD_NUMBER=1

# ======================
# SOCKET.IO (Optional)
# ======================
SOCKET_URL=ws://localhost:3000
SOCKET_PATH=/socket.io

# ======================
# PAYMENT GATEWAYS (Optional)
# ======================
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here

# ======================
# OTHER SOCIAL LOGIN (Optional)
# ======================
# GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here
# GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id_here
# APPLE_SERVICE_ID=com.yourcompany.yourapp